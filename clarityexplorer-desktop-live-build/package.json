{
  "name": "clarity-explorer",
  "version": "0.1.0",
  "description": "A local-first project browser for research and reading.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --universal"
  },
  "build": {
    "appId": "com.clarity.explorer",
    "productName": "Clarity Explorer",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "logo.icns",
      "identity": null
    },
    "dmg": {
      "sign": false
    }
  },
  "dependencies": {
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.13.0"
  },
  "author": "mnani87",
  "license": "MIT"
}
